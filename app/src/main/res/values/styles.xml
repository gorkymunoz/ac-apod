<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!--<item name="shapeAppearance">@style/ShapeAppearanceBottomBar</item>-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceBottomBar</item>

    </style>

    <style name="ShapeAppearanceBottomBar" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="App.Text.Bold" parent="Theme.AC_APOD">
        <item name="android:textAppearance">@style/TextAppearance.App.Bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextAppearance.App.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.App.Light" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontWeight">300</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

</resources>